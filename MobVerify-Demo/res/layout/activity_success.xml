<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="5dp"
	android:gravity="center_horizontal"
	android:background="@color/mob_verify_demo_common_bg"
	android:orientation="vertical">
	<ImageView
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_marginTop="90dp"
		android:scaleType="centerCrop"
		android:src="@drawable/mob_verify_demo_success_complete"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:textSize="@dimen/mob_verify_demo_text_size_m"
		android:textColor="@color/mob_verify_demo_text_color_common_black"
		android:text="@string/mob_verify_demo_success_complete"/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:textSize="@dimen/mob_verify_demo_text_size_xs"
		android:textColor="@color/mob_verify_demo_text_color_common_gray"
		android:text="@string/mob_verify_demo_success_hint"/>
	<com.mob.mobverify.ui.component.VerifyCommonButton
		android:id="@+id/mob_verify_demo_success_to_homepage_btn"
		android:layout_width="match_parent"
		android:layout_height="@dimen/mob_verify_demo_common_btn_height"
		android:layout_marginTop="70dp"
		android:layout_marginLeft="@dimen/mob_verify_demo_common_edge_margin"
		android:layout_marginRight="@dimen/mob_verify_demo_common_edge_margin"
		app:vcombtn_text="@string/mob_verify_demo_success_to_homepage"/>
</LinearLayout>